# Part (a): Count the number of words in a sentence
sentence = input("Enter a sentence: ").strip()  # Remove leading and trailing spaces
word_count = len(sentence.split())  # Split by spaces and count words
print(f"Number of words in the sentence: {word_count}")

# Part (b): Count the frequency of each character in the sentence
char_frequency = {}
for char in sentence:
    char_frequency[char] = char_frequency.get(char, 0) + 1  # Increment character count

print("Character frequencies:")
for char, freq in char_frequency.items():
    print(f"'{char}': {freq}")

# Part (c): Find the most frequent character(s)
if char_frequency:
    max_freq = max(char_frequency.values())  # Find the highest frequency
    most_frequent_chars = [char for char, freq in char_frequency.items() if freq == max_freq]  # Find all chars with max frequency

    print("Most frequent character(s):")
    for char in most_frequent_chars:
        print(f"'{char}' with frequency {max_freq}")
