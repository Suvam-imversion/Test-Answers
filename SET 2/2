# Menu-driven program with the required options
def reverse_sentence(sentence):
    words = sentence.split()
    return ' '.join(reversed(words))

def count_word_occurrences(paragraph):
    words = paragraph.split()
    word_count = {}
    for word in words:
        word = word.lower().strip(",.!?")  # Normalize words
        word_count[word] = word_count.get(word, 0) + 1
    return word_count

def find_and_replace(paragraph, target_word, replacement_word):
    return paragraph.replace(target_word, replacement_word)

def main():
    while True:
        print("\nMenu:")
        print("1. Reverse the words in a sentence")
        print("2. Count occurrences of each word in a paragraph")
        print("3. Find and replace all occurrences of a specific word in a paragraph")
        print("4. Exit")
        choice = input("Enter your choice: ")

        try:
            if choice == "1":
                sentence = input("Enter a sentence: ")
                print("Reversed Sentence:", reverse_sentence(sentence))
            elif choice == "2":
                paragraph = input("Enter a paragraph: ")
                word_counts = count_word_occurrences(paragraph)
                print("Word Occurrences:", word_counts)
            elif choice == "3":
                paragraph = input("Enter a paragraph: ")
                target_word = input("Enter the word to find: ")
                replacement_word = input("Enter the replacement word: ")
                print("Updated Paragraph:", find_and_replace(paragraph, target_word, replacement_word))
            elif choice == "4":
                print("Exiting the program.")
                break
            else:
                print("Invalid choice. Please try again.")
        except Exception as e:
            print("Error:", e)

# Run the program
main()
